<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Vaults</name>
  <summary>An application for creating encrypted vaults for the GNOME desktop.</summary>
  <description>
    <p>
      Vaults lets you create encrypted vaults in which you can safely store files. It uses Gocryptfs and CryFS for encryption.
    </p>
    <p>
      Note: This version is sandboxed, to use Vaults you need to install:
    </p>
    <ul>
      <li>gocryptfs</li>
      <li>CryFS</li>
      <li>fuse</li>
    </ul>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/mpobaschnig/Vaults/master/data/resources/screenshots/vaults.png</image>
      <caption>Main Window</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://mpobaschnig.github.io/Vaults/</url>
  <url type="bugtracker">https://github.com/mpobaschnig/Vaults/issues</url>
  <content_rating type="oars-1.0" />
  <releases>
    <release version="0.1.0" date="2021-04-23" />
  </releases>
  <kudos>
     <kudo>ModernToolkit</kudo>
     <kudo>HiDpiIcon</kudo>
  </kudos>
  <developer_name>Martin Pobaschnig</developer_name>
  <update_contact>mpobaschnig@posteo.de</update_contact>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
  <releases>
		<release version="0.1.0" date="2021-04-27">
			<p>
				Initial release
			</p>
		</release>
	</releases>
</component>
